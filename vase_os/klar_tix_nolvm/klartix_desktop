# pacman -S --noconfirm --needed ${HW_ALL_OPENSOURCE}

# AMD/ATI only

# pacman -S --noconfirm --needed ${HW_AMD_OPENSOURCE}

# Intel only

# pacman -S --noconfirm --needed ${HW_INTEL_OPENSOURCE}


################### NVIDIA GARBOYLE
